p = '*'
for i in range(0,6):
    print(p)
 
p1='* * *'
for i in range(0,3):
    print(p1)
    
#PATTERN 3
p3='*'
for i in range(0,6):
    print('*',end='*')
    
p=''
print(p)
for i in range(0,9):
    j='* '
    p=j+p
    print(p)
 #reverse pattern    
row=6
for i in range(row+1,0,-1):
    for j in range(0,i-1):
     print('* ',end='')   
    print('')    
    
